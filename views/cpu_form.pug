extends layout

block content

  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') cpu:
      input#name.form-control(type='text', placeholder='Cpu core and thread.' name='name' required='true' value=(undefined===CPU ? '' : CPU.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
