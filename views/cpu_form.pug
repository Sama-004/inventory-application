extends layout

block content
  h1 Create New Cpu

    //- Display form errors if there are any
  if errors
    ul
      each error in errors
        li= error.msg


  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Enter Name' name='name' required='true')

    div.form-group
      label(for='brand') Brand:
      input#brand.form-control(type='text', placeholder='Enter Brand' name='brand' required='true')

    div.form-group
      label(for='socketType') Socket Type:
      input#memory.form-control(type='text', placeholder='Enter Socket Type' name='socketType' required='true')

    div.form-group
      label(for='coreCount') Core Count:
      input#memory.form-control(type='number', placeholder='Enter Core Count' name='coreCount')

    div.form-group
      label(for='threadCount') Thread Count:
      input#interface.form-control(type='number', placeholder='Enter Thread Count' name='threadCount')

    div.form-group
      label(for='frequency') Frequency:
      input#interface.form-control(type='text', placeholder='Enter Frequency' name='frequency')

    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Enter Price' name='price' required='true')

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
