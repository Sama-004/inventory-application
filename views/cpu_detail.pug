extends layout

block content
  h1= title

  if cpu
    div
      h2 CPU Details
      img(src=`/catalog/${cpu.picture}`, alt=`${cpu.name}` style='width: 500px; heights:300px;')
      p Name: #{cpu.name}
      p Brand: #{cpu.brand}
      p Socket Type: #{cpu.socketType}
      p Core Count: #{cpu.coreCount}
      p Thread Count: #{cpu.threadCount}
      p Frequency: #{cpu.frequency}
      p Price: â‚¹#{cpu.price}
    hr
    p
      a(href=`/catalog/cpu/${cpu._id}/delete`) Delete CPU
    
    p
      a(href=`/catalog/cpu/${cpu._id}/update`) Update CPU
  else
    p CPU not found
