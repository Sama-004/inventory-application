extends layout

block content
  h1= title

  if ram
    div
      h2 Ram Specs
      p Name: #{ram.name}
      p Brand: #{ram.brand}
      p Capacity: #{ram.capacity}
      p Type: #{ram.type}
      p Speed: #{ram.speed}
      p Price: #{ram.price}      
  else
    p Motherboard not found

  hr
  p
    a(href=`${ram.url}/delete`) Delete Ram
