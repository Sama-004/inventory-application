extends layout

block content
  h1= title

  if ram
    div
      h2 Ram Specs
      img(src=`/catalog/${ram.picture}`, alt=`${ram.name}` style='width: 500px; heights:300px;')
      p Name: #{ram.name}
      p Brand: #{ram.brand}
      p Capacity: #{ram.capacity}
      //- p Type: #{ram.type}
      p Speed: #{ram.speed}
      p Price: #{ram.price}      
  else
    p Ram not found

  hr
  p
    a(href=`${ram.url}/delete`) Delete Ram
  
  p
    a(href=`${ram.url}/update`) Update Ram
