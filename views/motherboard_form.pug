extends layout

block content
  h1= title

  //- Display form errors if there are any
  if errors
    ul
      each error in errors
        li= error.msg

  //- Motherboard creation form
  form(method='POST' action='' enctype='multipart/form-data')
    div.form-group
      label(for='name') Motherboard Name:
      input#name.form-control(type='text', placeholder='Enter Motherboard Name' name='name' required='true' value=(undefined === motherboard ? '' : motherboard.name))
    
    div.form-group
      label(for='brand') Brand:
      input#wattage.form-control(type='text', placeholder='Enter brand' name='brand' required='true')

    div.form-group
      label(for='socketType') Socket Type:
      input#efficiencyRating.form-control(type='text', placeholder='Enter socket type' name='socketType')

    div.form-group
      label(for='formFactor') Form Factor:
      input#modular.form-control(type='text', placeholder='Enter the form factor' name='formFactor')

    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Enter price' name='price' required='true')

    div.form-group
      label(for='picture') Upload Motherboard Image:
      input#image.form-control(type='file', name='picture')

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg


    button.btn.btn-primary(type='submit') Create Motherboard
