extends layout

block content
  h1= title

  //- Display form errors if there are any
  if errors
    ul
      each error in errors
        li= error.msg

  //- Graphics Card creation form
  form(method='POST' action='')
    div.form-group
      label(for='name') Graphics Card Name:
      input#name.form-control(type='text', placeholder='Enter Graphics Card Name' name='name' required='true' value=(undefined === graphicscard ? '' : graphicscard.name))

    //- Add other input fields for the form as needed

    button.btn.btn-primary(type='submit') Create Graphics Card
